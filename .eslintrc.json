{
    "env": {
        "browser": true,
        "es2021": true
	},
	"globals": {
		"Routing": "readonly",
		"Translator": "readonly",
		"wretch": "readonly"
	},
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "html"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
			{ "ignoredNodes": ["TemplateLiteral *"] }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
	"settings": {
		"html/html-extensions": [".html", ".twig"],
		"html/javascript-mime-types": ["text/javascript", ""]
	}
}
