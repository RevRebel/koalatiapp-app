{% extends 'app_base.html.twig' %}

{% block title %}{% trans %}project_settings.title{% endtrans %}{% endblock %}
{% block section_title %}{{ 'generic.project_section_title'|trans({'%name%':project.name}) }}{% endblock %}

{% block javascripts %}
	<script src="{{ asset("components/tabbed-container/component.js") }}"></script>
{% endblock %}

{% block body %}
	{{ form_start(form) }}
		{% set submitButton = form_row(form.save) %}

		<tabbed-container>
			<div id="basic-information">
				<h2>{% trans %}project_settings.tabs.basic_information{% endtrans %}</h2>
				{{ form_row(form.name) }}
				{{ form_row(form.url) }}
				{{ submitButton|raw }}
			</div>

			<div id="team-and-roles">
				<h2>{% trans %}project_settings.tabs.team{% endtrans %}</h2>
				{% trans %}generic.not_yet_implemented{% endtrans %}
				{{ submitButton|raw }}
			</div>

			<div id="automated-testing">
				<h2>{% trans %}project_settings.tabs.automated_testing{% endtrans %}</h2>
				{% trans %}generic.not_yet_implemented{% endtrans %}
				{{ submitButton|raw }}
			</div>

			<div id="checklist">
				<h2>{% trans %}project_settings.tabs.checklist{% endtrans %}</h2>
				{% trans %}generic.not_yet_implemented{% endtrans %}
				{{ submitButton|raw }}
			</div>
		</tabbed-container>
	{{ form_end(form) }}
{% endblock %}
