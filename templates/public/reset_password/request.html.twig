{% extends 'base.html.twig' %}

{% block title %}{% trans %}password_reset.email_form.page_title{% endtrans %}{% endblock %}

{% block body %}
	<section>
		<div class="container center column">
			<img id="big-branding" src="{{ asset("media/brand/koalati-logo-v.svg") }}" alt="Koalati's logo" width="250">

    		<h1>{% trans %}password_reset.email_form.title{% endtrans %}</h1>
			<div class="card small">
				{% for flash_error in app.flashes('reset_password_error') %}
					<div class="notice danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				{{ form(requestForm) }}
			</div>
		</div>
	</section>
{% endblock %}
