{% extends "email/_base.html.twig" %}

{% block body %}
	<spacer size="20"></spacer>

	<row>
		<columns>
			{% trans with {
				"%firstName%": user.firstName,
				"%link%": url('app_reset_password', {token: resetToken.token}),
			} %}password_reset.email.introduction{% endtrans %}
		</columns>
	</row>

	<row>
		<columns>
			<center>
				<button href="{{ url('app_reset_password', {token: resetToken.token}) }}" size="large">
					{% trans %}password_reset.email.button_label{% endtrans %}
				</button>
			</center>
		</columns>
	</row>

	<row>
		<columns>
			{% trans with {
				"%expirationTime%": resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle')
			} %}password_reset.email.footer{% endtrans %}
		</columns>
	</row>
{% endblock %}
